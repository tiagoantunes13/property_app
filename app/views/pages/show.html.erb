<div class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen py-12">
  <div class="max-w-4xl mx-auto px-4">
    <div class="bg-white rounded-lg shadow-lg p-8">
      <h1 class="text-4xl font-bold text-indigo-900 mb-8"><%= @page.title %></h1>
      
      <div class="prose prose-indigo max-w-none">
        <%= @page.content %>
      </div>
      
      <div class="mt-8 flex space-x-4">
        <%= link_to "Edit", edit_page_path(@page), class: "text-indigo-600 hover:text-indigo-800" %>
